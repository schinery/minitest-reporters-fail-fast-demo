<!DOCTYPE html>
<html>
  <head>
    <title>Minitest Reporters Fail Fast Demo</title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag(
      "application.css"
    ) %>
    <%= javascript_include_tag(
      "application",
    ) %>
  </head>

  <body>
    <div>
      <% if user_signed_in? %>
      <div>
        <ul>
          <li>
            <a href="/">Home</a>
          </li>
          <li>
            <%= link_to "Users", users_path %>
          </li>
          <li>
            <%= link_to("Sign Out", destroy_user_session_path, method: :delete,) if user_signed_in? %>
          </li>
        </ul>
      </div>
      <% end %>
      <%= render "layouts/flash" %>
      <%= yield %>
    </div>
  </body>
</html>
