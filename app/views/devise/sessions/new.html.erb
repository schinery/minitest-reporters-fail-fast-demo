<div class="g">
  <div class="g-col g-span6 g-col--centered">
    <h2>Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field form-controlGroup">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, autofocus: true, class: "form-input" %>
      </div>

      <div class="field form-controlGroup">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, autocomplete: "off", class: "form-input" %>
      </div>

      <%- if devise_mapping.recoverable? %>
        <div class="form-controlGroup">
          <%= link_to "Forgot password?", new_password_path(resource_name), class: 'right' %>
        </div>
      <% end -%>

      <% if devise_mapping.rememberable? -%>
        <div class="field form-controlGroup">
          <%= f.label :remember_me, class: "control control--custom" do %>
            <%= f.check_box :remember_me, class: "control--custom-input" %>
            <span class="control-indicator control-indicator--tickbox"></span>
            Remember me
          <% end %>
        </div>
      <% end -%>

      <div class="actions form-actions">
        <%= f.submit "Log in", class: "btn btn--primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>